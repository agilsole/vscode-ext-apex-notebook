{
  "name": "anonymous-apex-notebook",
  "displayName": "Anonymous Apex Notebook",
  "description": "Notebook support for executing anonymous apex scripts and SOQL queries",
  "version": "0.3.0",
  "repository": {
    "url": "https://github.com/jake-kirkman/vscode-ext-apex-notebook"
  },
  "icon": "media/package-icon.png",
  "engines": {
    "vscode": "^1.84.2"
  },
  "categories": [
    "Other",
    "Notebooks"
  ],
  "keywords": [
    "Kernal",
    "Apex",
    "SOQL",
    "Notebook",
    "Salesforce"
  ],
  "author": {
    "name": "Jake Kirkman"
  },
  "publisher": "JakeKirkman",
  "activationEvents": [],
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "anonymous-apex-notebook.create-apex-notebook",
        "title": "New Apex Notebook",
        "category": "Create"
      }
    ],
    "configuration": {
      "title": "Apex Notebooks",
      "properties": {
        "anonymous-apex-notebook.apexConfirmDialogPreference": {
          "type": "string",
          "description": "When running apex inside of the notebook, should it ask for confirmation before running the script?",
          "default": "Always",
          "order": 0,
          "enum": [
            "Always",
            "Only when running multiple",
            "Never"
          ]
        },
        "anonymous-apex-notebook.enableSoqlJsonOutput": {
          "type": "boolean",
          "description": "When executing a SOQL, should the JSON of the SOQL request be displayed in addition to the HTML table view?",
          "default": false,
          "order": 0
        }
      }
    },
    "notebooks": [
      {
        "type": "anon-apex-notebook",
        "displayName": "Anonymous Apex Notebook",
        "selector": [
          {
            "filenamePattern": "*.apexnotebook"
          }
        ]
      }
    ],
    "notebookRenderer": [
      {
        "id": "apex-notebook-apex-renderer",
        "displayName": "Apex Renderer",
        "entrypoint": "./out/renderers/apex/index.js",
        "mimeTypes": [
          "jakekirkman.x-application/apex/index.js"
        ]
      },
      {
        "id": "apex-notebook-soql-renderer",
        "displayName": "SOQL Renderer",
        "entrypoint": "./out/renderers/soql/index.js",
        "mimeTypes": [
          "jakekirkman.x-application/anonymous-apex-notebook-soql-output"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "watch": "webpack --mode development --watch",
    "pretest": "webpack --mode development && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode-notebook-renderer": "^1.57.8",
    "@types/webpack-env": "^1.16.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "@types/vscode": "^1.84.2",
    "css-loader": "^4.2.0",
    "eslint": "^8.1.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "style-loader": "^1.2.1",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "vscode-notebook-error-overlay": "^1.0.1",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@salesforce/apex-node": "^3.0.2",
    "@salesforce/core": "^6.7.0"
  }
}
